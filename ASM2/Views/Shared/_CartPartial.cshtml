@using Microsoft.AspNetCore.Http
@using Newtonsoft.Json
@inject IHttpContextAccessor HttpContextAccessor


@{
    var session = HttpContextAccessor.HttpContext.Session;
    string jsoncart = session.GetString(ASM2.Controllers.BookController.CARTKEY);
    if (jsoncart != null)
    {
        var cart = JsonConvert.DeserializeObject<List<Cart>>(jsoncart);
        <div class="nav-item"><a asp-route="cart"><img src="https://static-00.iconduck.com/assets.00/shopping-cart-icon-256x256-7w1eu9sk.png" width="30" height="30">(@cart.Count)</a></div>

    }
    else
    {
        <div class="nav-item"><a asp-route="cart"><img src="https://static-00.iconduck.com/assets.00/shopping-cart-icon-256x256-7w1eu9sk.png" width="30" height="30" /></a></div>

    }
}