@using Microsoft.AspNetCore.Identity
@using ASM2.Models

@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item">
            <a id="manage" class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">@UserManager.GetUserName(User)</a>
        </li>
        <li class="nav-item">
            <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button id="logout" type="submit" class="nav-link btn btn-link text-dark">Logout</button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text-dark" id="register" asp-area="Identity" asp-page="/Account/Register"><img src="https://media.istockphoto.com/id/1326417308/vector/vector-illustration-register-now-label-with-megaphone.jpg?s=612x612&w=0&k=20&c=AcR1av1oUGMz5hncW9RUwPLyYpBJ26W77an4KaRtuRY=" width="180" height="90" /></a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" id="login" asp-area="Identity" asp-page="/Account/Login"><img src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcTpQF5oVC0zledJwp-asaMoojQK6dgbwe6t6A&usqp=CAU" width="60" height="60" /> </a>
        </li>
    }
</ul>